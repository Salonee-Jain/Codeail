<link rel="stylesheet" href="/css/home.css">
<% if(locals.user){ %>
    <div class="aside-left">
        
    </div>
    <section class="feed-post">
        <!-- <h2 class="post-heading">Posts</h2> -->
        <form action="posts/create" id="new-post-form" method="POST">
            <textarea name="posts" id="posts" cols="70" rows="4" placeholder="Add post.." required></textarea>
            <button type="submit">Post</button>
        </form>


        <div class="post-list">
            <% for(posts of posts){ %>



                <div class="post-card">
                    <div class="post-user">
                        <div class="profile-img"
                            style="background-color: red; border-radius:50%; height: 50px; width: 50px; overflow:hidden">
                            <img src="/images/profile.png" alt="" style="width:100%" height="100%;">
                        </div>
                        <div class="profile-info">
                            <p>
                                <%= posts.user.name %>
                            </p>
                            <p id="time">
                                <%= posts.createdAt.toString().substring(4, 21); %>
                            </p>
                        </div>
                    </div>
                    <div class="post-content">
                        <%= posts.content %>
                    </div>

                    <hr>


                    <div class="post-actions">

                        <a href="" class="like"><i class="fa-regular fa-heart"></i> Like</a>

                        <a href="" class="share"><i class="fa-regular fa-comment"></i> Share</a>
                        <a href="" class="repost'"><i class="fa-regular fa-flag"></i> Repost</a>
                    </div>
                    <hr>

                    <form action="comments/create" id="new-comment-form" method="POST">

                        <input type="text" name="comment" id="comment" placeholder="Comment" required>
                        <input type="hidden" name="post" value="<%= posts._id %>">
                        <button type="submit">Comment</button>
                    </form>



                    <!-- //comment list -->
                    <ul class="comment-list" id="comment_<%= posts._id %>">
                        <% for( comment of posts.comments.reverse()){ %>

                            <li>
                                <p class="comment-user">
                                    <%= comment.user.name %>
                                    <br>
                                    <%= comment.createdAt.toString().substring(4, 21); %>
                                </p>
                                <p class="comment-content">
                                    <%= comment.content %>

                            </li>
                            <%}%>
                    </ul>
                </div>

                <%}%>
        </div>

    </section>

    <div class="aside-right">

    </div>


    <%}else{%>

        <div class="sign-container">


            <h1 class="sign-heading">
                Welcome to Codeial
                This is Home page, SignIn to see your posts
            </h1>
        </div>
        <%}%>