<div class="post-card" id="post-<%= posts.id %>">
    <div class="post-user">
        <div class="profile-img"
            style=" border-radius:50%; height: 50px; width: 50px; overflow:hidden">
            <%if(posts.user.avatar){%>
                <img src="<%= posts.user.avatar %>" alt="<%= posts.user.name %>" style="width:100%; height:100%; border-radius:50%;">
                <%}else{%>
                <img src="/images/profile.png" alt="" style="width:100%; height:100%; border-radius:50%;">
                <%}%>
        </div>
        <div class="profile-info">
            <p>

                <%= posts.user.name %>
            </p>
            <p id="time">
                <%= posts.createdAt.toString().substring(4, 21); %>
            </p>
        </div>
    </div>
    <div class="post-content">
        <%= posts.content %>
    </div>

    <hr>


    <div class="post-actions">

        <a href="" class="like"><i class="fa-regular fa-heart"></i> Like</a>

        <a href="" class="share"><i class="fa-regular fa-comment"></i> Share</a>
        <a href="" class="edit"><i class="fa-regular fa-pen-to-square"></i> Edit</a>
        <% if(locals.user && posts.user.id==locals.user.id ){ %>
            <a href="posts/delete/<%= posts.id %>" class="delete-post" id="<%= posts.id %>"><i
                    class="fa-regular fa-trash-can"></i> Delete</a>
            <%}%>

    </div>
    <hr>

    <form action="comments/create" id="post-<%= posts._id %>-comments-form" method="POST" class="new-comment-form">
        <input type="text" name="comment" class="comment-text-area" placeholder="Comment" required>
        <input type="hidden" name="post" value="<%= posts._id %>">
        <button type="submit">Comment</button>
    </form>



    <!-- //comment list -->
    <ul class="comment-list" id="post-comments-<%= posts._id %>">
        <% for( comment of posts.comments){ %>
            <%- include('_comments') %>
                <%}%>
    </ul>
</div>