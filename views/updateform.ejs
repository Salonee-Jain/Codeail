<link rel="stylesheet" href="/css/user_profile.css">
<div class="sign-container">

    <h1 class="sign-heading">
        Update Profile
    </h1>
    <div class="update-profile-info" style="display:flex; flex-direction: column;">

        <div class="profile-img" style=" border-radius:50%; height: 70px; width: 70px; overflow:hidden">
            <%if(user.avatar){%>
                <img src="<%= user.avatar %>" alt="<%= user.name %>" style="width:100%; height:100%; border-radius:50%;">
                <%}else{%>
                <img src="/images/profile.png" alt="" style="width:100%; height:100%; border-radius:50%;">
                <%}%>
        </div>
        <form action="/users/update/<%= locals.user._id %>" enctype="multipart/form-data" method="POST" >
            <input type="text" name="name" value="<%= locals.user.name %>" required>
            <input type="email" name="email" value="<%= locals.user.email %>" required>
    
            <input id="avatar" type="file" name="avatar" placeholder="Profile picture">
             
            <input type="submit" value="Update">

        </form>

    </div>
</div>