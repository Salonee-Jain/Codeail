<link rel="stylesheet" href="/css/user_profile.css">
<div class="sign-container">

    <h1 class="sign-heading">
        Update Profile
    </h1>
    <div class="update-profile-info">

        <div class="profile-img"
            style="background-color: red; border-radius:50%; height: 70px; width: 70px; overflow:hidden">
            <img src="/images/profile.png" alt="" style="width:100%" height="100%;">
        </div>
        <form action="/users/update/<%= locals.user._id %>" method="POST">
            <input type="text" name="name" value="<%= locals.user.name %>" required>
            <input type="email" name="email" value="<%= locals.user.email %>" required>

            <input type="submit" value="Update">

        </form>

    </div>
</div>