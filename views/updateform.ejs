<link rel="stylesheet" href="/css/user_profile.css">
<div class="profile-container">
    <div class="profile-info">
        <form action="/users/update/<%= locals.user._id %>" method="POST">
            <input type="text" name="name" value="<%= locals.user.name %>" required>
            <input type="email" name="email" value="<%= locals.user.email %>" required>
            
            <input type="submit" value="Update">
        
        </form>

    </div>
</div>