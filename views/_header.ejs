<link rel="stylesheet" href="<%= locals.assetPath('css/header.css') %>">


<header>
  <div class="logo"><a href="/">Codeail</a></div>
  
  <div class="user-links">
    <% if(locals.user){ %>
       <a href="/users/profile/<%= user.id %>" class="users" style="background-color: transparent;"><p><%= user.name %></p>
        <div class="profile-img" style=" border-radius:50%; height: 40px; width: 40px; overflow:hidden">
          <%if(user.avatar){%>
              <img src="<%= user.avatar %>" alt="<%= user.name %>" style="width:100%; height:100%; border-radius:50%;">
              <%}else{%>
              <img src="<%=locals.assetPath('images/profile.png')%>" alt="" style="width:100%; height:100%; border-radius:50%;">
              <%}%>
      </div></a>
        
        <a href="/users/sign-out">Signout</a>
    <% }else{ %>
    
        <a href="/users/sign-in">SignIn</a>
    
        <a href="/users/sign-up">SignUp</a>
    <%}%>
  </div>
</header>

