
<link rel="stylesheet" href="<%=locals.assetPath('css/sign_up.css')%>">
<div class="sign-container">
    <h1 class="sign-heading">Sign Up</h1>

<form action="/users/create" method="POST">
    <input type="text" name="name" placeholder="Your Name" required>
    <input type="email" name="email" placeholder="Your Email" required>
    <input type="password" name="password" placeholder="Password" required>
    <input type="password" name="confirm_password" placeholder="Confirm Password" required>
    <input type="submit" value="Sign Up">

</form>
<hr>
<div class="" style="color:rgb(175, 175, 175) ; margin-top: 10%; font-size: 0.8rem;">
    <p>Or Sign Up with</p>
</div>
<div class="additional">
    
    <a href="/users/auth/google">  &nbsp; <i class="fa-brands fa-google fa-2x"></i></a>
    <a href="/users/auth/google">  &nbsp; <i class="fa-brands fa-linkedin-in fa-2x"></i></a>
    <a href="/users/auth/github">  &nbsp; <i class="fa-brands fa-github fa-2x"></i></a>

</div>
</div>